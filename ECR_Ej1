#include <iostream>

using namespace std;

/*
Ejercicio 1

Escriba un programa en C++ que determina la suma de los 10 primeros números positivos.
Ejemplo:
La suma de los 10 primeros números positivos es 55

  */

int main() {

  int num=1, sum=0, cant;

  cout<<"Indique la cantidad de los primeros numeros a sumar:";
  cin>>cant;

  while(num<=cant){
    sum = sum+ num;
    num ++;
  }

  cout<<"La suma de los "<< cant << " primeros números es: "<< sum<<endl;
  
  return 0;
}

